<?xml version="1.0" encoding="utf-8"?>
<android.support.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_grey"
    android:padding="@dimen/box_inset_layout_padding"
    tools:context=".view.diet_annotation_ui.CheckboxListActivity"
    tools:deviceIds="wear">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="5dp">


        <android.support.wear.widget.WearableRecyclerView
            android:id="@+id/recMainDetailActivityList"
            android:layout_width="match_parent"
            android:layout_height="106dp"
            android:layout_gravity="top|center"
            android:layout_margin="2dp"
            android:scrollbars="vertical" />

        <Button
            android:id="@+id/btnDetailActivityNext"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom|center"
            android:text="Next"
            android:onClick="onClickDetailsNext"
            android:textSize="10dp" />

    </FrameLayout>


    <FrameLayout
        android:id="@+id/mainDetailAnnotationProgress"
        android:animateLayoutChanges="true"
        android:visibility="gone"
        android:alpha="0.7"
        android:background="#000000"
        android:layout_width="match_parent"
        android:clickable="false"
        android:elevation="10dp"
        android:layout_height="match_parent">

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:layout_gravity="center" />
    </FrameLayout>
</android.support.wear.widget.BoxInsetLayout>