<?xml version="1.0" encoding="utf-8"?>

<!-- Initial layout of wearable app; button only    -->
<android.support.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_grey"
    android:padding="@dimen/box_inset_layout_padding"
    tools:context=".view.HomeActivity"
    tools:deviceIds="wear">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:context="data.com.datacollector.view.HomeActivity"
        tools:deviceIds="wear">



        <android.support.wear.widget.WearableRecyclerView
            android:id="@+id/recycler_activities"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_margin="4dp"
            android:elevation="1dp"
            android:visibility="gone"
            android:scrollbars="vertical" />

        <Button
            android:id="@+id/btn_start"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="11dp"
            android:background="@drawable/custom_circle"
            android:elevation="5dp"
            android:text="@string/button_init"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:textColor="@color/white" />

        <FrameLayout
            android:id="@+id/progressBar"
            android:animateLayoutChanges="true"
            android:visibility="gone"
            android:alpha="0.7"
            android:background="#000000"
            android:layout_width="match_parent"
            android:clickable="false"
            android:elevation="10dp"
            android:layout_height="match_parent">

            <ProgressBar
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:layout_gravity="center" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/btnStopRecord"
            android:animateLayoutChanges="true"
            android:visibility="gone"
            android:alpha="1"
            android:background="#000000"
            android:layout_width="match_parent"
            android:elevation="10dp"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnStopRecord2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                android:textStyle="bold"
                android:drawableBottom="@drawable/ic_mic_stop"
                android:onClick="onClickRecording"
                android:text="STOP RECORDING" />
        </FrameLayout>

        <ToggleButton
            android:id="@+id/btnRecord"
            android:drawableBottom="@drawable/ic_mic_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17dp"
            android:text="Start recording"
            android:textOn="Stop recording"
            android:textOff="Start recording"
            android:onClick="onClickRecording"
            android:color="@color/green"/>

        <!--<ProgressBar-->
            <!--android:id="@+id/progressBar"-->
            <!--style="?android:attr/progressBarStyle"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_alignParentStart="true"-->
            <!--android:layout_alignParentTop="true"-->
            <!--android:background="#96707070"-->
            <!--android:layout_weight="2"-->
            <!--android:padding="30dp"-->
            <!--android:clickable="false"-->
            <!--android:visibility="gone"/>-->




    </RelativeLayout>

</android.support.wear.widget.BoxInsetLayout>